.settings {
  @mixin wrapper;
  background: rgba(0, 0, 0, 0.34);
  backdrop-filter: blur(1px);

  & > form {
    width: 70%;
    display: flex;
    margin-top: 25px;
    flex-direction: column;
    gap: 15px;
  }
}

.close {
  position: absolute;
  top: 15px;
  right: 15px;
  width: 40px;
  height: 40px;
  display: grid;
  place-items: center;
  color: $black;
  transition: color $trans;

  &:hover {
    color: $accentColor;
  }
}
