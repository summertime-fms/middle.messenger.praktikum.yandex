<label class="{{ styles.label }} {{classes}}" >
  <div>
    <input class="{{ styles.input }}" type="{{type}}" value="{{value}}" name="{{name}}" placeholder=" " required="{{isRequired}}" {{extraAttrs}}>

    {{#if text}}
        <span class="{{styles.labelText}}">
          {{text}}
        </span>
    {{/if}}

  </div>

  {{{error}}}
</label>
